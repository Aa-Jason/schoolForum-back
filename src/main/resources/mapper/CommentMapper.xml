<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.exrick.xboot.modules.your.mapper.CommentMapper">
    <resultMap id="BaseResultMap" type="cn.exrick.xboot.modules.your.entity.Comment">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="create_by" jdbcType="VARCHAR" property="createBy" />
        <result column="create_time" jdbcType="INTEGER" property="createTime" />
        <result column="del_flag" jdbcType="INTEGER" property="delFlag" />
        <result column="update_by" jdbcType="VARCHAR" property="updateBy" />
        <result column="update_time" jdbcType="VARCHAR" property="updateTime" />
        <result column="comment_answer_count" jdbcType="VARCHAR" property="commentAnswerCount" />
        <result column="comment_content" jdbcType="VARCHAR" property="commentContent" />
        <result column="comment_support_count" jdbcType="VARCHAR" property="commentSupportCount" />
        <result column="comment_user_id" jdbcType="VARCHAR" property="commentUserId" />
        <result column="post_id" jdbcType="VARCHAR" property="postId" />
    </resultMap>
    <select id="getInfo" resultType="cn.exrick.xboot.modules.your.entity.Comment">
        select * from s_comment
        where post_user_id=#{id}
    </select>
    <select id="getPost" resultType="cn.exrick.xboot.modules.your.entity.Post">
        select post_title,nick_name,id
        from s_post
        where id=#{postId}
    </select>
    <select id="getUserInfo" resultType="cn.exrick.xboot.modules.your.entity.UserInfo">
        select nick_name,id,avatar from s_user_info
        where id=#{userId}
    </select>

</mapper>