<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.exrick.xboot.modules.your.mapper.AnswerMapper">
    <resultMap id="BaseResultMap" type="cn.exrick.xboot.modules.your.entity.Answer">
        <id column="id" jdbcType="INTEGER" property="id" />
        <result column="create_by" jdbcType="VARCHAR" property="createBy" />
        <result column="create_time" jdbcType="INTEGER" property="createTime" />
        <result column="del_flag" jdbcType="INTEGER" property="delFlag" />
        <result column="update_by" jdbcType="VARCHAR" property="updateBy" />
        <result column="update_time" jdbcType="VARCHAR" property="updateTime" />
        <result column="answer_content" jdbcType="VARCHAR" property="answerContent" />
        <result column="answer_user_id" jdbcType="VARCHAR" property="answerUserId" />
        <result column="comment_id" jdbcType="VARCHAR" property="commentId" />
        <result column="target_answer_id" jdbcType="VARCHAR" property="targetAnswerId" />
        <result column="target_user_id" jdbcType="VARCHAR" property="targetUserId" />
    </resultMap>
    <select id="getInfo" resultType="cn.exrick.xboot.modules.your.entity.Answer">
        select * from s_answer
        where target_user_id=#{id}
    </select>
    <select id="getPost" resultType="cn.exrick.xboot.modules.your.entity.Post">
        select post_title,nick_name,id
        from s_post
        where id=#{postId}
    </select>
    <select id="getUserInfo" resultType="cn.exrick.xboot.modules.your.entity.UserInfo">
        select nick_name,id,avatar from s_user_info
        where id=#{userId}
    </select>
    <select id="getCommentInfo" resultType="cn.exrick.xboot.modules.your.entity.Comment">
        select *
        from s_comment
        where id=#{commentId}
    </select>
    <select id="getAnswerInfo" resultType="cn.exrick.xboot.modules.your.entity.Answer">
        select nick_name,answer_content,answer_user_id
        from s_answer
        where id=#{answerId}
    </select>

</mapper>